#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 6, 7, 8};
    int n = 7; // size of array

    int missing = -1;
    for (int i = 0; i < n - 1; i++) {
        if (arr[i + 1] - arr[i] != 1) {
            missing = arr[i] + 1;
            break;
        }
    }

    cout << "Missing Number: " << missing << endl;
    return 0;
}

#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 6, 7, 8};
    int n = 8; // numbers should be from 1 to 8

    int low = 0, high = n - 2; // 6 elements → last index = 6
    int missing = n;

    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (arr[mid] == mid + 1) {
            low = mid + 1;   // go right
        } else {
            missing = mid + 1; // possible answer
            high = mid - 1;    // go left
        }
    }

    cout << "Missing Number (Binary Search): " << missing << endl;
}
