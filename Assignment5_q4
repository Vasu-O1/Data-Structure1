#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    
    Node(int val) : data(val), next(nullptr) {}
};

class LinkedList {
private:
    Node* head;
    Node nodes[4];
    int nodeCount;
    
public:
    LinkedList() : head(nullptr), nodeCount(0) {}
    
    void insertAtEnd(int value) {
        if (nodeCount >= 4) {
            cout << "Maximum nodes reached!" << endl;
            return;
        }
        nodes[nodeCount] = Node(value);
        
        if (head == nullptr) {
            head = &nodes[nodeCount];
        } else {
            Node* temp = head;
            while (temp->next != nullptr) {
                temp = temp->next;
            }
            temp->next = &nodes[nodeCount];
        }
        nodeCount++;
    }
    
    void reverse() {
        Node* prev = nullptr;
        Node* current = head;
        Node* next = nullptr;
        
        while (current != nullptr) {
            next = current->next;
            current->next = prev;
            prev = current;
            current = next;
        }
        
        head = prev;
    }
    
    void display() {
        Node* temp = head;
        while (temp != nullptr) {
            cout << temp->data << " -> ";
            temp = temp->next;
        }
        cout << "NULL" << endl;
    }
};

int main() {
    LinkedList list;
    
    // Create the linked list: 1->2->3->4->NULL
    list.insertAtEnd(1);
    list.insertAtEnd(2);
    list.insertAtEnd(3);
    list.insertAtEnd(4);
    
    cout << "Original Linked List: ";
    list.display();
    
    list.reverse();
    
    cout << "Reversed Linked List: ";
    list.display();
    
    return 0;
}
